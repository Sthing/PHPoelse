{% extends "layout.twig" %}

{% block title %}Lobby{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>PHPÃ¸lse - Lobby</h1>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Your name</div>
		</div>
		<div class="panel-body">
			<form action="/set-name" method="post" onsubmit="">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Enter your name" />
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success">Save</button>
				</div>
			</form>
		</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Games</div>
		</div>
		<table id="game-list" class="table table-striped">
			<tbody>
				{% for game in games %}
					<tr>
						<td>#{{ game.id }}</td>
						<td>{{ game.playerCount }} players</td>
						<td><a href="/join-game/{{ game.id }}" class="btn btn-default">Join</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Players</div>
		</div>
		<table id="player-list" class="table table-striped">
			<tbody>
				{% for player in players %}
					<tr>
						<td>{{ player.name }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
