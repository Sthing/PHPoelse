{% extends "layout.twig" %}

{% block title %}Lobby{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>PHPÃ¸lse - Game #{{ game.id }}</h1>
	</div>

	<div id="board" class="board">
		{% for tile in tiles %}
			{% if tile.type = 'elephant' or tile.type = 'wurst' or tile.type = 'fellow' or tile.type = 'block' %}
				<div class="board-cell" data-x="{{ tile.x }}" data-y="{{ tile.y }}">
					<div class="tile tile-{{ tile.type }}">
				</div>
			{% else %}
				<div class="board-cell droppable" data-x="{{ tile.x }}" data-y="{{ tile.y }}"></div>
			{% endif %}
		{% endfor %}
	</div>

	<div id="player-tiles">
		{% for playerTile in playerTiles %}
			<div class="tile tile-{{ playerTile.type }} draggable" data-id="{{ playerTile.id }}"></div>
		{% endfor %}
	</div>
{% endblock %}

<script type="text/javascript">
	$(function() {
		board.init();
	});
</script>
